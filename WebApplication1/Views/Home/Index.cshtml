@model IEnumerable<WebApplication1.Models.Persona>

@{
    ViewBag.Title = "Index";
}

<br />
<p>
    @Html.ActionLink("Agregar", "Create", null, new { @class = "nes-btn is-success", style = "height:30px;font-size:8px;" })
</p>
<div class="nes-container is-rounded">
    <table style="font-size:small" class="table table-condensed">
        <tr>
            <th>
                NOMBRE
            </th>
            <th>
                EDAD
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Edad)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "nes-btn is-warning", style = "height:30px;font-size:8px;" })
                    @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "nes-btn is-primary", style = "height:30px;font-size:8px;" })
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "nes-btn is-error", style = "height:30px;font-size:8px;" })
                </td>
            </tr>
        }

    </table>
</div>

